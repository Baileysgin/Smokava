# ===========================================
# SMOKAVA PROJECT - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env in each directory and fill in your values
# DO NOT commit .env files to git
#
# IMPORTANT: In production, NEVER use localhost values
# All URLs must use HTTPS and proper domain names

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
SERVER_IP=91.107.241.245

# ===========================================
# DOMAIN CONFIGURATION
# ===========================================
DOMAIN=smokava.com
API_DOMAIN=api.smokava.com
ADMIN_DOMAIN=admin.smokava.com
OPERATOR_DOMAIN=operator.smokava.com

# ===========================================
# BACKEND CONFIGURATION (.env)
# ===========================================
# Copy these to backend/.env

PORT=5000
# Production: Use MongoDB Atlas or production MongoDB
# Development: Can use mongodb://localhost:27017/smokava
MONGODB_URI=mongodb://mongodb:27017/smokava

JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_BASE_URL=https://api.smokava.com

# Frontend URLs (for CORS)
FRONTEND_URL=https://smokava.com
ADMIN_PANEL_URL=https://admin.smokava.com
OPERATOR_PANEL_URL=https://operator.smokava.com

# Additional allowed origins (comma-separated)
ALLOWED_ORIGINS=https://smokava.com,https://www.smokava.com,https://admin.smokava.com,https://operator.smokava.com

# Development origins (only used in development mode, comma-separated)
# Remove this in production or set to empty
# DEV_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
DEV_ORIGINS=

# Kavenegar SMS Service
KAVENEGAR_API_KEY=your-kavenegar-api-key-here
KAVENEGAR_TEMPLATE=otp-v2
KAVENEGAR_SENDER=

# OTP Debug (optional - for retrieving OTP in production)
# Set this to enable /api/auth/get-otp endpoint in production
OTP_DEBUG_SECRET_KEY=your-secret-key-for-otp-debugging

# Payment Gateway (if used)
IPG_BASE_URL=https://payment.example.com
IPG_CALLBACK_URL=https://smokava.com/packages/payment-callback

# WebSocket (if used)
WS_BASE_URL=wss://api.smokava.com

# Redis (if used)
# Use Redis service name in Docker or full URL for external Redis
REDIS_URL=redis://redis:6379

# ===========================================
# FRONTEND CONFIGURATION (.env.local)
# ===========================================
# Copy these to frontend/.env.local

# REQUIRED in production - no localhost fallback
NEXT_PUBLIC_API_URL=https://api.smokava.com/api

# WebSocket (if used)
NEXT_PUBLIC_WS_URL=wss://api.smokava.com

# CDN (if used)
NEXT_PUBLIC_CDN_URL=

# Image domain for Next.js Image optimization
NEXT_PUBLIC_IMAGE_DOMAIN=

# Mapbox token
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

DOMAIN=smokava.com

# ===========================================
# ADMIN PANEL CONFIGURATION (.env)
# ===========================================
# Copy these to admin-panel/.env

# REQUIRED in production - no localhost fallback
VITE_API_URL=https://api.smokava.com/api

# WebSocket (if used)
VITE_WS_URL=wss://api.smokava.com

# CDN (if used)
VITE_CDN_URL=

# ===========================================
# NOTES
# ===========================================
# - All NEXT_PUBLIC_* and VITE_* variables are exposed to the browser
# - In production, API URLs are REQUIRED (will fail if not set)
# - MONGODB_URI is REQUIRED in production (will fail if not set)
# - Never use localhost in production environment variables
# - All production URLs should use HTTPS
